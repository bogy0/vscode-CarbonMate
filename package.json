{
  "name": "vscode-carbonmate",
  "displayName": "CarbonMate",
  "description": "VS Code extension that provides Carbon Design System token suggestions for SCSS files. Automatically detects SCSS files and suggests Carbon spacing tokens when writing CSS properties like margin and padding.",
  "version": "1.1.0",
  "publisher": "BalintLendvai",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/balintlendvai/vscode-CarbonMate.git"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:scss",
    "onCommand:carbonmate.fixAll",
    "onCommand:carbonmate.refresh",
    "onCommand:carbonmate.showTypeSets",
    "onCommand:carbonmate.showColorTokens"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "CarbonMate",
      "properties": {
        "carbonmate.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable CarbonMate (IBM's Carbon Design System) token suggestions"
        }
      }
    },
    "commands": [
      {
        "command": "carbonmate.fixAll",
        "title": "CarbonMate: Fix All Hardcoded Spacing Values",
        "category": "CarbonMate"
      },
      {
        "command": "carbonmate.refresh",
        "title": "CarbonMate: Refresh Code Check",
        "category": "CarbonMate"
      },
      {
        "command": "carbonmate.showTypeSets",
        "title": "CarbonMate: Show Type Sets",
        "category": "CarbonMate"
      },
      {
        "command": "carbonmate.showColorTokens",
        "title": "CarbonMate: Show Color Tokens",
        "category": "CarbonMate"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "npx eslint src --ext ts"
  },
  "keywords": [
    "vscode",
    "extension",
    "carbon",
    "design-system",
    "scss",
    "tokens",
    "spacing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.31.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@carbon/layout": "^10.0.0",
    "@carbon/type": "^10.0.0"
  }
}
